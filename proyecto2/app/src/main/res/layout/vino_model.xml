<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="2.5dp"
    android:layout_height="310dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@drawable/bc_adapter">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_vino"
                android:layout_width="90dp"
                android:layout_height="230dp"
                android:layout_marginStart="30dp"
                android:layout_gravity="center"
                android:src="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/view"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/tvNombreVino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/view"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/tvRegion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_below="@id/tvNombreVino" />

                <TextView
                    android:id="@+id/tvPais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvNombreVino"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/tvRegion" />

                <LinearLayout
                    android:id="@+id/icons"
                    android:layout_above="@id/btnCompra"
                    android:layout_marginBottom="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_wine_bar_24" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_grain_24" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_above="@id/btnCompra"
                    android:layout_toEndOf="@id/icons"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvTipo"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvUva"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnCompra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/view"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

        </LinearLayout>






        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:gravity="center">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreVinoNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vino: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvUvaNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Uva: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvTipoNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Tipo: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPaisNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="País: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvRegionNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Región: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPrecioNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Precio: "
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreVino2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre vino"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvUva2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nombre uva"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvTipo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nombre tipo"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPais2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nombre país"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvRegion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nombre región"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Nombre precio"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>